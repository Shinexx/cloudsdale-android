<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/nowCardStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="400dp" >

    <TextView
        android:id="@+id/home_card_title"
        style="@style/nowCardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="4dp"
        android:paddingLeft="4dp"
        android:text="@string/fragment_home_title" />

    <QuickContactBadge
        android:id="@+id/home_card_quickbadge"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignLeft="@+id/home_card_title"
        android:layout_below="@+id/home_card_title"
        android:layout_margin="4dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_unknown_user" />

    <TextView
        android:id="@+id/home_card_username"
        style="@style/nowCardContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/home_card_quickbadge"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/home_card_quickbadge"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/home_card_join_date"
        style="@style/nowCardContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home_card_username"
        android:layout_below="@+id/home_card_username"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/home_card_cloud_count"
        style="@style/nowCardContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home_card_join_date"
        android:layout_below="@+id/home_card_join_date" />

</RelativeLayout>