<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.cloudsdale.android"
    android:versionCode="0"
    android:versionName="0.1.0 pre-alpha" >

    <uses-sdk
        android:maxSdkVersion="15"
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <uses-library android:name="com.WazaBe.HoloEverywhere" >
    </uses-library>
    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="CloudsdaleMobileApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.CloudsdaleLight" >
        <activity
            android:name=".ui.LoginViewActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <data android:scheme="T4JOAuth" android:host="main"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.CloudsdaleLoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
            </intent-filter>
        </activity>
    </application>

</manifest>