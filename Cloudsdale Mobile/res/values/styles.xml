<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.CloudsdaleLight" parent="Holo.Theme.Light.DarkActionBar"></style>

    <style name="Theme.CloudsdaleDark" parent="Holo.Theme"></style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="nowCardStyle">
        <item name="android:background">@drawable/search_bg_shadow</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">200dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">#707070</item>
    </style>

    <style name="nowCardTitle" parent="android:Widget.TextView">
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:textColor">#707070</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="nowCardContent">
        <item name="android:textColor">#707070</item>
    </style>

</resources>