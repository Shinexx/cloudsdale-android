<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/card_home_avatar"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_unknown_user" />

    <TextView
        android:id="@+id/card_home_cloud_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/card_home_avatar"
        android:layout_toRightOf="@id/card_home_avatar"
        android:padding="4dp"
        android:text="You&apos;re a member of 25 clouds"
        android:textAppearance="@android:style/TextAppearance.Medium" />
    
    <TextView
        android:id="@+id/card_home_join_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_home_cloud_count"
        android:layout_toRightOf="@id/card_home_avatar"
        android:padding="4dp"
        android:text="You joined on February 2nd, 2012"
        android:textAppearance="@android:style/TextAppearance.Medium" />

</RelativeLayout>