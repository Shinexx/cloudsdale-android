<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/cloudsdaleLoginUsernameField"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:hint="@string/login_view_fragment_username_hint"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/cloudsdaleLoginPasswordField"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:hint="@string/login_view_fragment_password_hint"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/cloudsdaleLoginSubmitButton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/login_view_fragment_login_button_text" />

</LinearLayout>