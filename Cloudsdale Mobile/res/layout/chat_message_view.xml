<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:longClickable="false"
    android:padding="0dp" >

    <ImageView
        android:id="@+id/message_user_avatar"
        android:layout_width="@dimen/chat_message_avatar_dimen"
        android:layout_height="@dimen/chat_message_avatar_dimen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/cloud_view_avatar_description"
        android:src="@drawable/unknown_user" />

    <LinearLayout
        android:id="@+id/message_root"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/message_user_avatar"
        android:layout_toRightOf="@+id/message_user_avatar"
        android:background="@android:color/white"
        android:minHeight="@dimen/chat_message_avatar_dimen"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_medium"
            android:layout_marginLeft="@dimen/padding_small"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/message_name_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/message_role_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_medium" />
    </LinearLayout>

</RelativeLayout>