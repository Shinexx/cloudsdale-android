<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_chat_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1.0" >

    <ListView
        android:id="@+id/chat_message_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_frame_sm01"
        android:padding="0dp"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        tools:listitem="@layout/chat_message_view" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:clickable="false"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/chat_input_field"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight=".9"
            android:imeOptions="actionSend"
            android:inputType="text|textMultiLine|textCapSentences|textAutoCorrect" />

        <ImageButton
            android:id="@+id/chat_send_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight=".1"
            android:background="@null"
            android:clickable="true"
            android:src="@drawable/ic_send_message" />
    </LinearLayout>

</LinearLayout>